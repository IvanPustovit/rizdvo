{
  "name": "video-appjs",
  "version": "1.0.0",
  "scripts": {
    "start": "npm run start:server",
    "start:server": "node server/server.js",
    "start:client": "vite",
    "build": "npm run build:client",
    "build:client": "npm --prefix client run build",
    "dev": "concurrently \"npm run start:server\" \"npm run dev --prefix client\""
  },
  "devDependencies": {
    "concurrently": "^9.1.0",
    "vite": "^6.0.5",
    "@vitejs/plugin-react": "^4.3.4"
  }
}
